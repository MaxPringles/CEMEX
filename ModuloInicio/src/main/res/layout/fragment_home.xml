<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/home_background"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:textAppearance="@style/TextAppearance.FontLight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/home_bienvenido"
            android:textColor="@color/colorAzul"
            android:textSize="40sp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:scaleType="fitStart"
            android:src="@drawable/home_logo_cliente"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/prospectos_custom_border_button"
        android:divider="@drawable/nav_custom_divider"
        android:showDividers="middle"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btn_menu_plan_semanal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="14dp"
                android:src="@drawable/menu_plan_tactico" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:text="@string/home_menu_plan_semanal"
                    android:textColor="@color/colorAzul"

                    android:textSize="12sp"
                    android:maxLines="2"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_menu_cita_visita"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="14dp"
                android:src="@drawable/menu_agenda" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:text="@string/home_menu_cita_visita"
                    android:textColor="@color/colorAzul"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:maxLines="2"

                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_menu_prospectos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:padding="14dp"
                android:src="@drawable/menu_prospectos" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <me.grantland.widget.AutofitTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="top|center_horizontal"
                    android:text="@string/home_menu_prospectos"
                    android:textColor="@color/colorAzul"
                    android:singleLine="true"
                    android:textSize="12sp"
                    android:maxLines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textStyle="bold"/>
            </LinearLayout>
            <!--<me.grantland.widget.AutofitTextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:gravity="top|center_horizontal"-->
                <!--android:text="@string/home_menu_notificaciones"-->
                <!--android:textColor="@color/colorAzul"-->
                <!--android:textStyle="bold"/>-->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>