<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BotonVerde">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="EstiloBotonVerde" parent="@style/BotonVerde">
        <item name="android:background">@drawable/boton_verde</item>
    </style>

    <!-- Fuentes de Texto -->
    <!-- Fuente Bold -->
    <style name="TextAppearance.FontBold" parent="android:TextAppearance">
        <item name="fontPath">fonts/Bold.ttf</item>
    </style>
    <!-- Fuente Book -->
    <style name="TextAppearance.FontBook" parent="android:TextAppearance">
        <item name="fontPath">fonts/Book.ttf</item>
    </style>
    <!-- Fuente Light -->
    <style name="TextAppearance.FontLight" parent="android:TextAppearance">
        <item name="fontPath">fonts/Light.ttf</item>
    </style>
    <!-- Fuente Regular -->
    <style name="TextAppearance.FontRegular" parent="android:TextAppearance">
        <item name="fontPath">fonts/Regular.ttf</item>
    </style>

    <!-- ToolBar Fragments -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/colorAzul</item>
        <item name="android:textColorSecondary">@color/colorAzul</item>
        <item name="actionMenuTextColor">@color/colorAzul</item>
    </style>

</resources>
