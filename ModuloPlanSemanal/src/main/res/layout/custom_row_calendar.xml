<?xml version="1.0" encoding="utf-8"?>
<com.github.tibolte.agendacalendarview.agenda.AgendaEventView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlanco"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp">
            <View
                android:id="@+id/view_calendar_tipo_venta"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:background="@color/color_actividades_ventas"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/txt_calendar_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="3:00 PM"
                android:textAppearance="@style/TextAppearance.FontLight"
                android:textColor="@color/colorGrisOscuro"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_calendar_tarea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Preparar Propuesta"
                android:textColor="@color/colorAzul"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_calendar_tipo_prospecto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="NUEVO PROSPECTO"
                android:textAppearance="@style/TextAppearance.FontLight"
                android:textColor="@color/colorAzul"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_calendar_nombre_obra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Nextlalpan - Varon Metta"
                android:textAppearance="@style/TextAppearance.FontLight"
                android:textColor="@color/colorAzul"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_calendar_estatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Reagendado"
                android:textColor="@color/color_status_prospecto"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</com.github.tibolte.agendacalendarview.agenda.AgendaEventView>